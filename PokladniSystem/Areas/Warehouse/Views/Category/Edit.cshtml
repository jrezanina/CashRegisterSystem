@model Category

@{
    ViewData["Title"] = "Úprava kategorie";
}

<div class="text-center mb-4">
    <h1>@ViewData["Title"]</h1>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="mb-3" style="display: none">
        <label class="form-label" asp-for="Id">Číslo pokoje</label>
        <input class="form-control" asp-for="Id" value="@Model.Id" readonly="true">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Název kategorie</label>
        <input class="form-control" asp-for="Name" value="@Model.Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Uložit</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}