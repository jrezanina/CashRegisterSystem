@model IList<StoreViewModel>

@{
    ViewData["Title"] = "Správa prodejen";
}

<div class="text-center mb-4">
    <h1>@ViewData["Title"]</h1>
</div>

<a class="btn btn-primary mb-4" asp-action="Create">Přidat prodejnu</a>
@{
    if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Název</th>
                        <th scope="col">Telefonní číslo</th>
                        <th scope="col">Email</th>
                        <th scope="col">Web</th>
                        <th scope="col">Město</th>
                        <th scope="col">PSČ</th>
                        <th scope="col">Ulice</th>
                        <th scope="col">Číslo popisné</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row">@Model[i].Store.Id</th>
                            <td>@Model[i].Store.Name</td>
                            <td>@Model[i].Contact.Phone</td>
                            <td>@Model[i].Contact.Email</td>
                            <td>@Model[i].Contact.Web</td>
                            <td>@Model[i].Contact.City</td>
                            <td>@Model[i].Contact.PostalCode</td>
                            <td>@Model[i].Contact.Street</td>
                            <td>@Model[i].Contact.BuildingNumber</td>
                            <td><a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model[i].Store.Id">Upravit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="lead text-dark mb-4">Nebyly nalezeny žádné prodejny</p>
    }
}